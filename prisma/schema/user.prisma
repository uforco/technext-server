model User {
  id        String       @id @unique @default(uuid())
  email     String       @unique
  password  String?
  provider  AuthProvider @default(LOCAL)
  firstName String
  lastName  String?
  image     String?
  createdAt DateTime     @default(now())
  updatedAt DateTime     @updatedAt

  urls Url[]
}

enum AuthProvider {
  LOCAL
  GOOGLE
  GITHUB
}

model Url {
  id        String   @id @unique @default(uuid())
  longurl   String
  shorturl  String   @unique
  count     Int      @default(0)
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
