model User {
  id        String       @id @unique @default(uuid())
  email     String       @unique
  password  String?
  provider  AuthProvider @default(LOCAL)
  firstName String
  lastName  String
  image     String?
  createdAt DateTime     @default(now())
  updatedAt DateTime     @updatedAt
}

enum AuthProvider {
  LOCAL
  GOOGLE
  GITHUB
}
